<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/drawable_shape"
    android:gravity="start|top"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="68dp"
                android:scaleType="centerInside"
                android:src="@drawable/drawable_image_13" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="-5.36dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="5.36dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="113dp"
                        android:layout_height="15dp"
                        android:gravity="center_vertical"
                        android:text="Restaurant Name"
                        android:textColor="#FF000000"
                        android:textSize="11dp" />

                    <LinearLayout
                        android:layout_marginEnd="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginVertical="1dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/drawable_image_14" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginVertical="1dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/drawable_image_14" />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginVertical="1dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/drawable_image_14" />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginVertical="1dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/drawable_image_14" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/drawable_image_18" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="92.74dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_marginBottom="-0.5dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Location"
                    android:textColor="#FF979797"
                    android:textSize="7.85dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47.73dp"
                    android:layout_marginTop="-3.36dp"
                    android:layout_marginBottom="-5.36dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:lineHeight="9.18dp"
                    android:maxLines="5"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation"
                    android:textColor="#FF979797"
                    android:textSize="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="15dp"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/drawable_image_19" />

            <TextView
                android:layout_width="213dp"
                android:layout_height="11dp"
                android:layout_marginLeft="4dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="1.2km from your location"
                android:textColor="#FF606060"
                android:textSize="7.5dp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="11dp"
                android:layout_marginLeft="4dp"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Crowded"
                android:textColor="#FF606060"
                android:textSize="7.5dp" />
        </LinearLayout>
</LinearLayout>